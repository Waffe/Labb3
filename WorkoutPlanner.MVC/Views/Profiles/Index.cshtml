@using WorkoutPlanner.Data.Entities
@model IEnumerable<WorkoutPlanner.Data.Entities.Profile>

@{
    ViewData["Title"] = "Index";
}

<h2>All members</h2>


<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegistrationDate)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.DateOfBirth.ToString("d")
            </td>
            <td>
                @item.RegistrationDate.ToString("d")
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Profile</a>
            </td>
        </tr>
}
    </tbody>
</table>
